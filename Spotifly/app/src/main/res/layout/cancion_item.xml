<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:paddingBottom="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#433737"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_view"
                android:layout_width="294dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="#00352B2B"
                android:contentDescription="Icono"
                android:src="@drawable/music_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/music_title_text"
                    android:layout_width="216dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="19dp"
                    android:layout_toEndOf="@id/icon_view"
                    android:layout_weight="1"
                    android:background="#00352B2B"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    tools:text="Music" />

                <TextView
                    android:id="@+id/artist_text"
                    android:layout_width="215dp"
                    android:layout_height="21dp"
                    android:layout_below="@+id/music_title_text"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/icon_view"
                    android:layout_weight="1"
                    android:background="#00352B2B"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    tools:text="Artist" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="345dp"
                android:layout_height="match_parent"
                android:layout_marginStart="26dp"
                android:layout_toEndOf="@id/music_title_text"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:contentDescription="boton anadir"
                app:srcCompat="@drawable/playlist_add" />
        </LinearLayout>
